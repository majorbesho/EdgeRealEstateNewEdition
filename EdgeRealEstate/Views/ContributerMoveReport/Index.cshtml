@model IEnumerable<EdgeRealEstate.Models.ViewModels.ContributerMoveViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}

<h2 style="text-align-last:center">تقرير حركة مساهم</h2>


<table class="table">



    @using (Html.BeginForm("Index", "ContributerMoveReport"))
    {
        <div>
            <div class="form-horizontal" dir="rtl">

                <div class="form-group" dir="rtl">



                    <div class="col-md-12">
                        <div class="col-md-10">
                            @Html.DropDownList("FContributerID", (IEnumerable<SelectListItem>)ViewBag.ContributerFrom, null, new { @id = "FContributerID", @class = "form-control" })
                        </div>
                        @Html.Label("FromPro", "من ", htmlAttributes: new { @class = "control-label col-md-1" })
                    </div>
                </div>
                <div class="col-md-6" dir="rtl" style="display:none">
                    <div class="col-md-5">
                        @Html.DropDownList("ToContributerID", (IEnumerable<SelectListItem>)ViewBag.ContributerTo, null, new { @id = "ToContributerID", @class = "form-control" })
                    </div>
                    @Html.Label("toPro", "الى ", htmlAttributes: new { @class = "control-label col-md-1" })
                </div>
                <div class="form-group bmd-form-group" dir="rtl">
                    <div class="col-md-6">
                        <input type="submit" class="btn btn-primary fa fa-print" value="عرض" style="text-align:center;color: white;cursor: pointer;" />
                        <br />
                        <br />
                    </div>
                </div>
            </div>
            <br />


        </div>
    }

    <div @*class="col-md-8 pt-3 loaditems-grid"*@>
        @foreach (var group in Model.GroupBy(m => m.ContributorName))
        {
            <div id="@group.Key" @*class="tabmenucontent table-responsive"*@>
                <div>
                    <table class="table" dir="rtl" width="70%" style="font-weight:bold; font-size:medium">
                        <tr>
                            <td style="font-weight:bold; font-size:medium">
                                المساهم
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => @group.Key)
                            </td>
                            <td>
                            </td>

                        </tr>
                        <tr>
                            <td>
                                رصيد الصكوك
                            </td>
                            <td>
                                @ViewBag.C
                            </td>
                            <td>
                            </td>
                        </tr>
                        <tr>

                            <td>
                                رصيد المبالغ
                            </td>
                            <td>
                                @ViewBag.d
                            </td>
                            <td></td>
                        </tr>
                    </table>
                </div>
                <table class="table" dir="rtl">
              
                    @*total : @ViewBag.C
                    total @ViewBag.d*@

                    <thead style="background-color:#ccc; text-align-last:center" dir="rtl">
                        <tr dir="rtl">

                            
                            @*<th>
                    @Html.DisplayNameFor(model => model.refTypeCredit)
                </th>*@
                            <th>
                                حركة المساهم
                            </th>
                            <th>
                                التاريخ
                            </th>
                            <th>
                                المبلغ
                            </th>
                            @*<th>
                    @Html.DisplayNameFor(model => model.refTypeCreditID)
                </th>*@

                        </tr>

                    </thead>
                    <tbody style="text-align-last:center" dir="rtl">

                   
                        @foreach (var item in group)
                        {

                            <tr>

                              
                                @*<td>
                        @Html.DisplayFor(modelItem => item.refTypeCredit)
                    </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.RefnameCredit)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.indateCredit)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.paidCredit)
                                </td>
                                @*<td>
                        @Html.DisplayFor(modelItem => item.refTypeCreditID)
                    </td>*@

                            </tr>

                        }

                    </tbody>

                    @*<tfoot style="text-align-last: center">
            <tr>
                <td> </td>
                <td> الاجمالي</td>
                <td> </td>
                <td>@Model.Sum(i => i.paidCredit)</td>


            </tr>
        </tfoot>*@

                </table>

            </div>
        }
    </div>
  



</table>
