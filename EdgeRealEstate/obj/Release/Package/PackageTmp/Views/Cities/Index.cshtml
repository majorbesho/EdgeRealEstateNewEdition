@model IEnumerable<EdgeRealEstate.Entities.City>

@{
    ViewBag.Title = "Index";
    ViewBag.current = "Cities";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}

<h2>الكل</h2>

<p>
    @Html.ActionLink("جديد", "Create")
</p>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Aname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ename)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Aname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ename)
                </td>
                <td>
                    @Html.ActionLink("تعديل ", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("تفاصيل", "Details", new { id = item.Id }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

</div>